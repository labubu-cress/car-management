{
  "openapi": "3.0.0",
  "info": {
    "title": "Car Management App API",
    "version": "1.0.0",
    "description": "API for the Car Management WeChat Mini-program"
  },
  "servers": [
    {
      "url": "/api/v1/app"
    }
  ],
  "paths": {
    "/tenants/{tenantId}/auth/login": {
      "post": {
        "summary": "User Login or Register",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string"
                  }
                },
                "required": ["code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/vehicle-scenarios": {
      "get": {
        "summary": "Get all vehicle scenarios",
        "tags": ["Vehicle Scenarios"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of vehicle scenarios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/VehicleScenario"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/vehicle-scenarios/{id}": {
      "get": {
        "summary": "Get a vehicle scenario by ID",
        "tags": ["Vehicle Scenarios"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single vehicle scenario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VehicleScenario"
                }
              }
            }
          },
          "404": {
            "description": "Vehicle scenario not found"
          }
        }
      }
    },
    "/tenants/{tenantId}/car-categories": {
      "get": {
        "summary": "Get all car categories",
        "tags": ["Car Categories"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of car categories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CarCategory"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/car-categories/{id}": {
      "get": {
        "summary": "Get a car category by ID",
        "tags": ["Car Categories"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single car category",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarCategory"
                }
              }
            }
          },
          "404": {
            "description": "Car category not found"
          }
        }
      }
    },
    "/tenants/{tenantId}/car-trims": {
      "get": {
        "summary": "Get all car trims for a category",
        "tags": ["Car Trims"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "categoryId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of car trims",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CarTrim"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/car-trims/{id}": {
      "get": {
        "summary": "Get a car trim by ID",
        "tags": ["Car Trims"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single car trim",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarTrim"
                }
              }
            }
          },
          "404": {
            "description": "Car trim not found"
          }
        }
      }
    },
    "/tenants/{tenantId}/homepage-config": {
      "get": {
        "summary": "Get homepage configuration",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Homepage configuration",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HomepageConfig"
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/contact-us-config": {
      "get": {
        "summary": "Get contact us configuration",
        "tags": ["Configuration"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact us configuration",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactUsConfig"
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/faqs": {
      "get": {
        "summary": "Get all FAQs",
        "tags": ["FAQs"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of FAQs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Faq"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/users/current": {
      "get": {
        "summary": "Get current user",
        "tags": ["Users"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Current user data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/users/current/phone-number": {
      "post": {
        "summary": "Update user's phone number",
        "tags": ["Users"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string"
                  }
                },
                "required": ["code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User with updated phone number",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/favorites": {
      "get": {
        "summary": "Get user's favorite car trims",
        "tags": ["Favorites"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of favorite car trims with details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CarTrimWithDetails"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a car trim to favorites",
        "tags": ["Favorites"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "carTrimId": {
                    "type": "string"
                  }
                },
                "required": ["carTrimId"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Favorite added successfully"
          }
        }
      }
    },
    "/tenants/{tenantId}/favorites/{carTrimId}": {
      "delete": {
        "summary": "Remove a car trim from favorites",
        "tags": ["Favorites"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "carTrimId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Favorite removed successfully"
          }
        }
      }
    },
    "/tenants/{tenantId}/favorites/status/{carTrimId}": {
      "get": {
        "summary": "Check if a car trim is favorited",
        "tags": ["Favorites"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "carTrimId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Favorite status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "isFavorite": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tenants/{tenantId}/user-messages": {
      "post": {
        "summary": "Create a user message",
        "tags": ["User Messages"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserMessage"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The created user message",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserMessage"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tenantId": { "type": "string" },
          "nickname": { "type": "string" },
          "avatarUrl": { "type": "string" },
          "phoneNumber": { "type": "string" },
          "openId": { "type": "string" },
          "unionId": { "type": "string", "nullable": true },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "VehicleScenario": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tenantId": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "image": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "CarFeature": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" }
        }
      },
      "CarCategory": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tenantId": { "type": "string" },
          "name": { "type": "string" },
          "image": { "type": "string" },
          "badge": { "type": "string", "nullable": true },
          "tags": { "type": "array", "items": { "type": "string" } },
          "highlights": { "type": "array", "items": { "$ref": "#/components/schemas/CarFeature" } },
          "interiorImages": { "type": "array", "items": { "type": "string" } },
          "exteriorImages": { "type": "array", "items": { "type": "string" } },
          "offerPictures": { "type": "array", "items": { "type": "string" } },
          "displayOrder": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "vehicleScenarioId": { "type": "string" }
        }
      },
      "CarTrim": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tenantId": { "type": "string" },
          "name": { "type": "string" },
          "subtitle": { "type": "string" },
          "image": { "type": "string" },
          "badge": { "type": "string", "nullable": true },
          "originalPrice": { "type": "number" },
          "currentPrice": { "type": "number" },
          "features": { "type": "array", "items": { "$ref": "#/components/schemas/CarFeature" } },
          "categoryId": { "type": "string" },
          "displayOrder": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "CarTrimWithDetails": {
        "allOf": [
          { "$ref": "#/components/schemas/CarTrim" },
          { 
            "type": "object",
            "properties": {
              "category": { "$ref": "#/components/schemas/CarCategory" }
            }
          }
        ]
      },
      "HomepageConfig": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tenantId": { "type": "string" },
          "welcomeTitle": { "type": "string", "nullable": true },
          "welcomeDescription": { "type": "string", "nullable": true },
          "bannerImage": { "type": "string" },
          "benefitsImage": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "ContactUsConfig": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tenantId": { "type": "string" },
          "contactPhoneDescription": { "type": "string", "nullable": true },
          "contactPhoneNumber": { "type": "string", "nullable": true },
          "contactEmailDescription": { "type": "string", "nullable": true },
          "contactEmail": { "type": "string", "nullable": true },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Faq": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "answer": { "type": "string" },
          "tenantId": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "CreateUserMessage": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "contact": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["name", "contact", "content"]
      },
      "UserMessage": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "contact": { "type": "string" },
          "content": { "type": "string" },
          "userId": { "type": "string", "nullable": true },
          "tenantId": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
