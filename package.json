{
  "name": "cars-management-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preview:image": "dotenv -- sh -c 'docker run -p 3000:3000 $IMAGE_REGISTRY/$IMAGE_NAME:latest'",
    "build:image": "dotenv -- sh -c 'docker build -t $IMAGE_REGISTRY/$IMAGE_NAME:latest .'",
    "push:image": "dotenv -- sh -c 'docker push $IMAGE_REGISTRY/$IMAGE_NAME:latest'",
    "build:image:production": "dotenv -- sh -c 'docker build -t $IMAGE_REGISTRY/$IMAGE_NAME:$npm_package_version .'",
    "push:image:production": "dotenv -- sh -c 'docker push $IMAGE_REGISTRY/$IMAGE_NAME:$npm_package_version'",
    "test": "npm test --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "npm run clean && npm-run-all --parallel preview:frontend preview:backend:*",
    "preview:frontend": "npm run build:watch -w car-management-dashboard",
    "preview:backend:build": "npm exec -w car-management-api -- pkgroll --watch",
    "preview:backend:serve": "while [ ! -f packages/car-management-api/dist/index.js ]; do sleep 1; done && npm exec -w car-management-api -- nodemon --watch dist",
    "clean": "rimraf packages/car-management-api/dist"
  },
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  }
}
